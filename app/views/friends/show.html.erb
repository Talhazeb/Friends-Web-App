<section class="container mt-3">
  <div class="jumbotron px-3 py-4 px-sm-4 py-sm-5 bg-light rounded-3 mb-3">
    <h1 class="display-3" style="font-family: Varela Round;" ><%= @friend.first_name %> <%= @friend.last_name %></h1>
    <p class="lead">
      <%= @friend.email %> |
      <%= @friend.phone %>
    </p>
    <hr class="my-4">
    <%= link_to "Edit", edit_friend_path(@friend), class: "btn btn-primary" %>
    <%= link_to "Back", friends_path, class: "btn btn-secondary" %>
    <br/><br/>
    <%= button_to "Delete", @friend, method: :delete, class: "btn btn-danger"%>

  </div>
</section>